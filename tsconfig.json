{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022", "dom"],
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "layer_output/nodejs"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "layer"]
}
